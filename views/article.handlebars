<div class="columns"> 
    <div class="card">
  <h3 class="card-header-title">{{article.title}}</h3>
  <h5 class="card-content articleBody">{{body}}</h5>
  </div>
</div>


<div class="container">
  <div class="columns">
   <form action="/comment/{{article._id}}" method="POST" class="card-content column">
    <h5>Comment on this Article:</h5>
      <div class="columns">
        <div class="input-field">
          {{!-- <i class="material-icons prefix">perm_identity</i> --}}
          <input id="icon_prefix" type="text" placeholder="Name" name="name" class="validate active">
        </div>
        <div class="input-field">
          {{!-- <i class="material-icons prefix">comment</i> --}}
          <input id="icon_telephone" type="text" placeholder="Comment" name="comment" class="validate active">
        </div>
      </div>
       <!-- Submit Button -->
      <div class="columns">
        <div class="input-field">
        <center><input class="btn add-comment-button pink lighten-1" type="submit" value="Submit"></center>
        </div>
      </div>
    </form>
    </div>
</div>

{{!-- comments go here --}}
<div class="columns">
  <div class="column s2"></div>
    <div class="column s8">
      <h5>Comments:</h5>
        {{#if article.comment}}
          {{#each article.comment}}
            <div class="card">
              <p id="nameComment">{{name}}</p>
              <p>{{body}}<p>
            </div>
          {{/each}}
          {{else}}
          <p>No Comments Yet.</p>
        {{/if}}
    </div>
</div>
