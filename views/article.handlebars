<div class="columns">
    <div class="container">
        <div class="card">
            <h3 class="title is-centered articleBody">{{article.title}}</h3>
            <div class="card-header"></div>
            <h5 class="card-content articleBody">{{body}}</h5>
        </div>
    </div>
</div>


<div class="columns">
    <div class="container">
        <div class="column">
            <div class="panel">
                <div class="panel-heading is-danger">
                    <h5 class="">Comment on this Article:</h5>
                </div>
                <div class="field panel-block">
                    <form action="/comment/{{article._id}}" method="POST" class="commentForm">
                        <div class="control input-field">
                            <i class="far fa-user"></i>
                            <input id="icon_prefix" type="text" placeholder="Name" name="name" class="validate active is-warning">
                        </div>
                        
                        <div class="control input-field">
                            <i class="far fa-comments"></i>
                            <textarea class="textarea is-warning validate active" placeholder="comment"></textarea>
                            {{!-- <input id="input-field" type="textarea" placeholder="Comment" name="comment" class="validate active"> --}}
                        </div>

                        <!-- Submit Button -->
                        
                            <div class="input-field">
                                <input class="button is-warning add-comment-button" type="submit" value="Submit input">
                            </div>
                        
                    </form>
                </div>
            </div>
        </div>



        {{!-- comments go here --}}
        <div class="column">
            <div class="panel">
                <div class="panel-"
                <h5 class="">Comments:</h5>
                {{#if article.comment}}
                {{#each article.comment}}
                <div class="card">
                    <p id="nameComment">{{name}}</p>
                    <p>{{body}}<p>
                </div>
                {{/each}}
                {{else}}
                <p>No Comments Yet.</p>
                {{/if}}
            </div>
        </div>
    </div>
</div>

